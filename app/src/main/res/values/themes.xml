<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme con tonos azules elÃ©ctricos -->
    <style name="Theme.QpiqueApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_electric</item>
        <item name="colorPrimaryVariant">@color/blue_electric_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cyan_bright</item>
        <item name="colorSecondaryVariant">@color/cyan_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
    </style>

    <!-- Estilo personalizado para BottomNavigationView -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurface">@color/blue_electric</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="Theme.QpiqueApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QpiqueApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QpiqueApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>